{% extends 'DashboardTicketsBundle::layout.html.twig' %}

{% block content %}
<div class="ticket">
	<h1> {{ ticket.title }}</h1>
	<div class="row">
		<div class="col-sm-5 category">{{ ticket.categoryId }}</div>
		<div class="col-sm-4 author">
			<form action="{{ path('dashboard_tickets_attribute', { id:ticket.id }) }}" method="post" {{ form_enctype(form) }}>
			    {{ form_widget(form) }}

			    <input type="submit" />
			</form>
		</div>
		<div class="col-sm-3 date">{{ ticket.date|date("d/m/Y H:i:s") }}</div>
	</div>
	<div class="text">{{ ticket.content }}</div>
</div>
{% endblock %}